
<div id="topper" class="jumbotron" style="text-align: center">
  <h1>Here Comes<small> Our Wedding</small></h1>
</div>

<div id="first-page">
<div class="container">
  <div class="row">
  	<div class="col-md-6">
  		<div class="panel panel-primary">
			  <div class="panel-heading">
			    <h3 class="panel-title">Adventures</h3>
			  </div>
			  <div class="panel-body">
			    <% @events.each do |event|%>
				  <div class="well" id="inside">
					  <%= link_to event.name, event_path(event), class: 'btn btn-success' %>
					  <ul class="nav pull-right">
					  	<li>
					 		 	<%= link_to 'Edit', edit_event_path(event), class: 'btn btn-info btn-sm btn-right' %>
					    </li>
					  </ul>
				  </div>
				  <% end %>
			  </div>
			</div>
		</div>
				
		<div class="col-md-6">
			<div class="panel panel-primary">
			  <div class="panel-heading">
			    <h3 class="panel-title">Create Adventure</h3>
			  </div>
			  <div class="panel-body">
			  	<div class="well" id="inside">
				    <%= simple_form_for @event, html: {class: 'form-horizontal'}, url: events_path, method: :post do |f| %>
					    <%= f.input :name %></br>
					    <%= f.button :submit, 'Create Adventure' %>
					  <% end %>
				  </div>
			  </div>
			</div>	
	  </div>
  </div>
</div>
</div>